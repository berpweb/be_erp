<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pos_estimates_form" model="ir.ui.view">
        <field name="name">pos.order.estimates.form</field>
        <field name="model">pos.order</field>
        <field name="arch" type="xml">
            <form string="Estimates">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,paid,done" />
                </header>
                <sheet>
                <group col="4" colspan="4" name="order_fields">
                    <field name="name" string="Order Number"/>
                    <field name="date_order"/>
                    <field name="partner_id" domain="[('customer', '=', True),('user_ids','=',False)]" context="{'search_default_customer':1}" attrs="{'readonly': [('state','=','invoiced')]}" required="1"/>
                    <field name="vehicle_id" attrs="{'invisible':[('partner_id','=',False)]}" domain="[('partner_id', '=', partner_id)]" context="{'default_partner_id':partner_id}"/>
                </group>
                <notebook colspan="4">
                    <page string="Products">
                        <field name="lines" colspan="4" nolabel="1">
                            <tree string="Order lines" editable="bottom" default_order="type">
                                <field name="product_id" string="Part Number/Service"/>
                                <field name="type"/>
                                <field name="qty"/>
                                <field name="price_unit" widget="monetary"/>
                                <field name="discount" widget="monetary" invisible="1"/>
                                <field name="tax_ids_after_fiscal_position" widget="many2many_tags" invisible="1"/>
                                <field name="tax_ids" invisible="1"/>
                                <field name="price_subtotal" widget="monetary" string="Subtotal"/>
                                <field name="price_subtotal_incl" widget="monetary" invisible="1"/>
                            </tree>
                            <form string="Order lines">
                                <group col="4">
                                    <field name="product_id" string="Part Number"/>
                                    <field name="qty"/>
                                    <field name="discount" widget="monetary" invisible="1"/>
                                    <field name="price_unit" widget="monetary"/>
                                    <field name="price_subtotal" widget="monetary" string="Subtotal"/>
                                    <field name="price_subtotal_incl" invisible="1" widget="monetary"/>
                                    <field name="tax_ids_after_fiscal_position" widget="many2many_tags" invisible="1"/>
                                    <field name="tax_ids" invisible="1"/>
                                    <field name="notice" invisible="1"/>
                                </group>
                            </form>
                        </field>
                        <group class="oe_subtotal_footer oe_right" colspan="2" name="order_total">
                            <field name="amount_tax" widget="monetary" invisible="1"/>
                            <div class="oe_subtotal_footer_separator oe_inline">
                                <label for="amount_total" />
                                <button name="button_dummy"
                                    states="draft" string="(update)" class="oe_edit_only oe_link"/>
                            </div>
                            <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"/>
                        </group>
                        <div class="oe_clear"/>
                    </page>
                    <page string="Payments">
                        <field name="statement_ids" colspan="4" nolabel="1">
                            <tree editable="bottom" string="Statement lines">
                                <field name="journal_id" string="Payment Method"/>
                                <field name="statement_id" invisible="1"/>
                                <field name="amount"/>
                            </tree>
                            <form string="Payment lines">
                                <group col="4">
                                    <field name="journal_id" string="Payment Method"/>
                                    <field name="date"/>
                                    <field name="amount"/>
                                </group>
                            </form>
                        </field>
                    </page>
                    <page name="extra" string="Extra Info">
                        <group string="General Information">
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="location_id" widget="selection" groups="stock.group_stock_multi_locations"/>
                            <field name="user_id"/>
                            <field name="pricelist_id" groups="product.group_sale_pricelist"/>
                            <field name="picking_id" readonly="1" invisible="1"/>
                            <field name="pos_reference"/>
                        </group>
                        <group string="Accounting Information" invisible="1">
                            <group>
                                <field name="sale_journal" domain="[('type','=','sale')]"/>
                                <field name="account_move" readonly="1"
                                        attrs="{'invisible':[('state','&lt;&gt;','done')]}"/>
                            </group>
                        </group>
                    </page>
                    <page string="Notes" >
                        <field name="note"/>
                    </page>
                </notebook>
            </sheet>
            </form>
        </field>
    </record>

    <record id="view_pos_estimates_tree" model="ir.ui.view">
        <field name="name">pos.order.estimates.tree</field>
        <field name="model">pos.order</field>
        <field name="arch" type="xml">
            <tree string="Estimates" decoration-info="state == 'draft'" decoration-muted="state in ('done','cancel')">
                <field name="name" string="Order Number"/>
                <field name="partner_id"/>
                <field name="date_order"/>
                <field name="user_id"/>
                <field name="amount_total" sum="Amount total" widget="monetary"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_pos_estimates_search" model="ir.ui.view">
        <field name="name">pos.order.estimates.view</field>
        <field name="model">pos.order</field>
        <field name="arch" type="xml">
            <search string="Estimates">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_order"/>
            </search>
        </field>
    </record>

    <record id="action_pos_estimates" model="ir.actions.act_window">
        <field name="name">Estimates</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pos.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_pos_estimates_tree"/>
        <field name="search_view_id" ref="view_pos_estimates_search"/>
        <field name="domain">[('state','=','draft'),('is_special_order','=',False)]</field>
    </record>

    <record id="action_pos_estimates_tree" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_pos_estimates_tree"/>
        <field name="act_window_id" ref="action_pos_estimates"/>
    </record>

    <record id="action_pos_estimates_form" model="ir.actions.act_window.view">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_pos_estimates_form"/>
        <field name="act_window_id" ref="action_pos_estimates"/>
    </record>

    <menuitem id="menu_pos_estimates" parent="point_of_sale.menu_point_of_sale"
              action="action_pos_estimates" sequence="1" groups="point_of_sale.group_pos_user"/>

</odoo>
